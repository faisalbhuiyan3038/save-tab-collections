{
    "manifest_version": 2,
    "name": "Tab Collection Manager",
    "version": "1.0",
    "description": "Manage and access your tab collections.",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icons/icon-48.png"
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "strict_min_version": "102.0"
        },
        "gecko_android": {
            "strict_min_version": "113.0"
        }
    },

    "permissions": [
        "storage",
        "tabs"
    ]
}
